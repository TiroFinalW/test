<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jielan.dao.NoticeMapper">
    <resultMap id="ResultMap" type="com.jielan.model.Notice">
        <result property="id" column="id" jdbcType="INTEGER" />
        <result property="content" column="content" jdbcType="VARCHAR" />
        <result property="status" column="status" jdbcType="INTEGER" />
        <result property="sort" column="sort" jdbcType="INTEGER" />
        <result property="createTime" column="createtime" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="basesql">
        id,content,status,sort,createtime
    </sql>

    <select id="selectNotice" parameterType="com.jielan.model.query.NoticeQuery" resultMap="ResultMap" >
        select <include refid="basesql"/>
        from tb_hz_sign_notice limit #{pagestart},#{pagesize}
    </select>
    <select id="countNotice" parameterType="com.jielan.model.query.NoticeQuery" resultType="java.lang.Integer" >
        select count(*)
        from tb_hz_sign_notice
    </select>

    <insert id="addNotice" parameterType="com.jielan.model.Notice">
        insert into tb_hz_sign_notice (content,status,sort,createtime) values
        (#{content,jdbcType=VARCHAR},#{status,jdbcType=INTEGER},#{sort,jdbcType=INTEGER},now())
    </insert>

    <update id="updateNotice" parameterType="com.jielan.model.Activity">
        update tb_hz_sign_notice set
        <trim prefixOverrides=",">
            <if test="content!=null and content!=''">
                ,content=#{content,jdbcType=VARCHAR}
            </if>
            <if test="status!=null and status>=0">
                ,status=#{status,jdbcType=INTEGER}
            </if>
            <if test="sort!=null and sort>=0 ">
                ,sort=#{sort,jdbcType=INTEGER}
            </if>
        </trim>
        where id=#{id,jdbcType=INTEGER}
    </update>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="ResultMap">
        select <include refid="basesql"/> from tb_hz_sign_notice where id=#{id,jdbcType=INTEGER}
    </select>

    <delete id="deleteNotice" parameterType="java.lang.Integer">
        delete from tb_hz_sign_notice where id=#{id,jdbcType=INTEGER}
    </delete>
</mapper>